{% extends 'base.html.twig' %}

{% block title %}Party index{% endblock %}

{% block body %}
    <h1>Party index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Priceperhour</th>
                <th>ImagePath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for party in parties %}
            <tr>
                <td>{{ party.id }}</td>
                <td>{{ party.title }}</td>
                <td>{{ party.description }}</td>
                <td>{{ party.priceperhour }}</td>
                <td>{{ party.imagePath }}</td>
                <td>
                    <a href="{{ path('app_party_show', {'id': party.id}) }}">show</a>
                    <a href="{{ path('app_party_edit', {'id': party.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_party_new') }}">Create new</a>
{% endblock %}
