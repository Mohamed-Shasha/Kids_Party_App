{% extends 'base.html.twig' %}

{% block title %}Party{% endblock %}

{% block body %}


    <!-- Page content-->
    <div class="container mt-6">
        <div class="row">
            <div class="col-lg-12">
                <!-- Post content-->
                <article>
                    <!-- Post header-->
                    <header class="mb-2">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-5" style="margin-top: 40px">{{ party.title }}</h1>

                    </header>
                    <!-- Preview image figure-->
                    <figure class="mb-4"><img class="img-fluid rounded" src="{{ party.imagePath }}" alt="..."/></figure>
                    <!-- Post content-->
                    <section class="mb-5">
                        <p class="fs-5 mb-4"><strong
                                    style="font-size: xx-large; font-family: Andalusia">{{ party.description }}</strong>
                        </p>

                    </section>
                </article>

                <a class="btn btn-primary"  href="{{ path('app_comment_new', {'id': party.id}) }}">Leave a review</a>


                <!-- Comments section-->
                <section class="mb-5">
                    <div class="card bg-light">
                        <div class="card-body">
                            <!-- Comment form-->

                            <!-- Single comment-->
                            {% for party in parties %}
                                <div class="d-flex">
                                    <div class="flex-shrink-0"><img class="rounded-circle"
                                                                    src="https://dummyimage.com/50x50/ced4da/6c757d.jpg"
                                                                    alt="..."/></div>
                                    <div class="ms-3">
                                        <div class="fw-bold">{{ }}</div>
                                       {{ comment.content}}
                                    </div>
                                </div>

                            {% endfor %}

                        </div>
                    </div>
                </section>
            </div>


            <!-- Bootstrap core JS-->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <!-- Core theme JS-->
            <script src="js/scripts.js"></script>
        </div>
