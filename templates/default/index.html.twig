{% extends 'base.html.twig' %}

{% block title %}home page{% endblock %}

{% block body %}
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            {% for party in parties %}
            <div class="card"
                 style="width: 18rem;padding: 2px ;border-style:solid;border-color:black; margin-top: 50px; ">
                <img src="{{ party.imagePath }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ party.title }}</h5>
                    <p class="card-text">{{ party.description }}</p>

                    <a href="{{ path('app_bookings_new', {'id': party.id}) }}"
                       class="btn btn-dark"
                       style="background-color: #6b21a8">book for {{ party.priceperhour }}$ p.h</a>

                </div>
            </div>

        </div>

        {% endfor %}
    </div>
{% endblock %}
